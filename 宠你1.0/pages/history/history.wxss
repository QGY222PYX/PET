.container {
  padding: 24rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  margin: 0 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.filter-btn {
  padding: 12rpx 24rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.filter-btn text {
  font-size: 26rpx;
  color: #666;
}

.records-list {
  height: calc(100vh - 180rpx);
}

.record-item {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-info {
  flex: 1;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.pet-info {
  display: flex;
  flex-direction: column;
}

.pet-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.pet-breed {
  font-size: 24rpx;
  color: #666;
}

.timestamp {
  font-size: 24rpx;
  color: #999;
}

.description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.vital-signs {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.vital-item {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.emotion {
  background-color: #e6f7ff;
  color: #1890ff;
}

.scene {
  background-color: #f6ffed;
  color: #52c41a;
}

.lighting {
  background-color: #fff7e6;
  color: #fa8c16;
}

.activities {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.activity-tag {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.loading {
  text-align: center;
  padding: 24rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-state text {
  color: #999;
  font-size: 28rpx;
} 