.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.logo-container {
  width: 100%;
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
}

.logo {
  width: 40%;
  height: auto;
  max-width: 50%;
}

.button-container {
  width: 100%;
  margin-top: 80rpx;
  display: flex;
  justify-content: center;
}

.login-button {
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #FFFFFF;
}

.login-button.active {
  background-color: #00C851;
}

.login-button.disabled {
  background-color: #E5E5E5;
}

.agreement-container {
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.agreement-label {
  display: flex;
  align-items: center;
}

.agreement-text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 10rpx;
}

.agreement-link {
  color: #00C851;
}

/* 授权弹窗样式 */
.modal-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
}

.modal-content {
  padding: 40rpx 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
}

.phone-info {
  font-size: 30rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 30rpx;
}

.other-phone-container {
  margin-bottom: 30rpx;
}

.phone-input-container, .verify-code-container {
  display: flex;
  align-items: center;
  height: 90rpx;
  border-bottom: 2rpx solid #E5E5E5;
  margin-bottom: 30rpx;
}

.phone-input, .verify-code-input {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  padding: 0 10rpx;
}

.get-code-button {
  color: #00C851;
  font-size: 28rpx;
  padding: 0 10rpx;
}

.switch-option {
  text-align: center;
  margin-bottom: 30rpx;
}

.switch-text {
  color: #00C851;
  font-size: 28rpx;
}

.modal-buttons {
  display: flex;
  margin-top: 40rpx;
}

.cancel-button, .confirm-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  border-top: 2rpx solid #E5E5E5;
}

.cancel-button {
  color: #00C851;
  border-right: 2rpx solid #E5E5E5;
}

.confirm-button {
  color: #FFFFFF;
  background-color: #00C851;
}  