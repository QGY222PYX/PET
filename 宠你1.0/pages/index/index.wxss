.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.action-area {
  width: 90%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.take-photo-btn {
  width: 45%;
  height: 120rpx;
  background-color: #00C851;
  border-radius: 24rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.album-btn {
  width: 45%;
  height: 120rpx;
  background-color: #F0FFF0;
  border-radius: 24rpx;
  font-size: 36rpx;
  color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-area {
  width: 90%;
  height: 600rpx;
  border: 1rpx solid #E5E5E5;
  background-color: #F8F8F8;
  margin-bottom: 60rpx;
  padding: 20rpx;
  overflow-y: auto;
}

.preview-tip {
  color: #999999;
  font-size: 32rpx;
  text-align: center;
  line-height: 600rpx;
}

.submit-btn {
  width: 90%;
  height: 96rpx;
  background-color: #00C851;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 16rpx;
}

.submit-btn:active {
  background-color: #008033;
}