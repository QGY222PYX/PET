.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 30rpx;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group.error .input {
  border-color: #ff4d4f;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.code-input-wrap {
  display: flex;
  gap: 20rpx;
}

.code-input {
  flex: 1;
}

.code-btn {
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1890ff;
  border: none;
  border-radius: 8rpx;
  padding: 0;
}

.code-btn.disabled {
  background-color: #d9d9d9;
  color: #999;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  margin-top: 8rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #1890ff;
  border: none;
  border-radius: 8rpx;
  margin-top: 60rpx;
}

.save-btn.disabled {
  background-color: #d9d9d9;
  color: #999;
} 